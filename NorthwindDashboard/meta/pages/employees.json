{
  "access": [
    "Everybody"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Employees",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "addText": "Add",
                  "allowAdd": true,
                  "allowDelete": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "columns": [
                    {
                      "filterable": false,
                      "format": "base64",
                      "property": "Photo",
                      "sortable": false,
                      "template": "<img width='100%' height='100%' src='${data.Photo}' />",
                      "title": "Photo",
                      "type": "string",
                      "width": "120px"
                    },
                    {
                      "property": "FirstName",
                      "title": "First Name",
                      "type": "string"
                    },
                    {
                      "property": "LastName",
                      "title": "Last Name",
                      "type": "string"
                    },
                    {
                      "property": "Title",
                      "title": "Title",
                      "type": "string"
                    },
                    {
                      "property": "TitleOfCourtesy",
                      "title": "Title Of Courtesy",
                      "type": "string"
                    },
                    {
                      "format": "date-time",
                      "property": "BirthDate",
                      "template": "${data.BirthDate | utcDate}",
                      "title": "Birth Date",
                      "type": "string"
                    },
                    {
                      "format": "date-time",
                      "property": "HireDate",
                      "template": "${data.HireDate | utcDate}",
                      "title": "Hire Date",
                      "type": "string"
                    },
                    {
                      "property": "City",
                      "title": "City",
                      "type": "string"
                    },
                    {
                      "property": "Country",
                      "template": [
                        {
                          "name": "image0",
                          "path": "/assets/images/${data.Country.toLowerCase()}.png",
                          "style": {
                            "height": "20px",
                            "width": "40px"
                          },
                          "type": "image"
                        },
                        {
                          "name": "label0",
                          "text": "${data.Country}",
                          "type": "label"
                        }
                      ],
                      "title": "Country",
                      "type": "string",
                      "width": "150px"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "template": [
                        {
                          "icon": "shopping_cart",
                          "name": "link0",
                          "parameters": [
                            {
                              "name": "EmployeeID",
                              "value": "${data.EmployeeID}"
                            }
                          ],
                          "path": "orders-by-employee-id",
                          "text": "Orders",
                          "type": "link"
                        }
                      ],
                      "title": "Orders",
                      "width": "140px"
                    }
                  ],
                  "count": "${getEmployeesCount}",
                  "data": "${getEmployeesResult}",
                  "emptyText": "No records to display.",
                  "events": {
                    "add": [
                      {
                        "path": "add-employee",
                        "type": "popup"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete Employee",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Northwind.deleteEmployee",
                        "parameters": [
                          {
                            "name": "EmployeeID",
                            "value": "${event.EmployeeID}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "Employee deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "loadData": [
                      {
                        "name": "Northwind.getEmployees",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$expand",
                            "value": ""
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          }
                        ],
                        "then": [
                          {
                            "name": "getEmployeesResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getEmployeesCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "EmployeeID",
                            "value": "${event.EmployeeID}"
                          }
                        ],
                        "path": "edit-employee",
                        "type": "popup"
                      }
                    ]
                  },
                  "name": "grid0",
                  "title": "",
                  "type": "grid",
                  "confirmDeleteText": "Are you sure you want to delete this record?",
                  "confirmDeleteTitle": "Confirmation",
                  "confirmDeleteOkText": "Ok",
                  "confirmDeleteCancelText": "Cancel"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "Northwind.getEmployees",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          }
        ],
        "then": [
          {
            "name": "getEmployeesResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getEmployeesCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Employees"
}