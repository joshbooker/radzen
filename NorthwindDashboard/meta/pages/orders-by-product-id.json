{
  "access": [
    "Everybody"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Orders by Product: ${product.ProductName}",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "addText": "Add",
                  "allowAdd": false,
                  "allowDelete": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "columns": [
                    {
                      "filterProperty": "NorthwindOrder.Customer.CompanyName",
                      "filterable": false,
                      "property": "CustomerID",
                      "sortProperty": "NorthwindOrder.Customer.CompanyName",
                      "sortable": false,
                      "template": [
                        {
                          "icon": "credit_card",
                          "name": "link0",
                          "parameters": [
                            {
                              "name": "CustomerID",
                              "value": "${data.NorthwindOrder.CustomerID}"
                            }
                          ],
                          "path": "customers-by-customer-id",
                          "text": "${data.NorthwindOrder?.Customer?.CompanyName}",
                          "type": "link"
                        }
                      ],
                      "title": "Customer",
                      "type": "string",
                      "width": "360px"
                    },
                    {
                      "format": "double",
                      "property": "UnitPrice",
                      "template": "{{ data.UnitPrice | currency}}",
                      "title": "Unit Price",
                      "type": "number"
                    },
                    {
                      "format": "int32",
                      "property": "Quantity",
                      "title": "Quantity",
                      "type": "integer"
                    },
                    {
                      "format": "single",
                      "property": "Discount",
                      "title": "Discount",
                      "type": "number"
                    }
                  ],
                  "count": "${getNorthwindOrderDetailsCount}",
                  "data": "${getNorthwindOrderDetailsResult}",
                  "emptyText": "No records to display.",
                  "events": {
                    "add": [
                      {
                        "path": "add-order-detail",
                        "title": "Add Order Detail",
                        "type": "popup"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete NorthwindOrderDetail",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Northwind.deleteNorthwindOrderDetail",
                        "parameters": [
                          {
                            "name": "OrderID",
                            "value": "${event.OrderID}"
                          },
                          {
                            "name": "ProductID",
                            "value": "${event.ProductID}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "NorthwindOrderDetail deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "loadData": [
                      {
                        "name": "Northwind.getNorthwindOrderDetails",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$expand",
                            "value": "NorthwindOrder,NorthwindProduct"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter ? event.filter + ' and ':''}ProductID eq ${parameters.ProductID}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          },
                          {
                            "name": "$expand",
                            "value": "NorthwindOrder,NorthwindProduct"
                          }
                        ],
                        "then": [
                          {
                            "name": "getNorthwindOrderDetailsResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getNorthwindOrderDetailsCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "rowSelect": []
                  },
                  "name": "grid0",
                  "template": "",
                  "title": "",
                  "type": "grid",
                  "confirmDeleteText": "Are you sure you want to delete this record?",
                  "confirmDeleteTitle": "Confirmation",
                  "confirmDeleteOkText": "Ok",
                  "confirmDeleteCancelText": "Cancel"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "Northwind.getNorthwindOrderDetails",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          },
          {
            "name": "$expand",
            "value": "NorthwindOrder($expand=Customer),NorthwindProduct"
          },
          {
            "name": "$filter",
            "value": "ProductID eq ${parameters.ProductID}"
          }
        ],
        "then": [
          {
            "name": "getNorthwindOrderDetailsResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getNorthwindOrderDetailsCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          },
          {
            "name": "product",
            "type": "set",
            "value": "${result.value[0].NorthwindProduct}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Orders by ProductID"
}