{
  "access": [
    "Everybody"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Products",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "addText": "Add",
                  "allowAdd": true,
                  "allowDelete": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "columnWidth": "",
                  "columns": [
                    {
                      "footerTemplate": "",
                      "property": "ProductName",
                      "template": "",
                      "title": "Product Name",
                      "type": "string",
                      "width": "200px"
                    },
                    {
                      "filterProperty": "Supplier.CompanyName",
                      "format": "int32",
                      "sortProperty": "Supplier.CompanyName",
                      "template": [
                        {
                          "icon": "motorcycle",
                          "name": "link0",
                          "parameters": [
                            {
                              "name": "SupplierID",
                              "value": "${data.SupplierID}"
                            }
                          ],
                          "path": "suppliers-by-supplier-id",
                          "text": "${data.Supplier.CompanyName}",
                          "type": "link"
                        }
                      ],
                      "title": "Supplier",
                      "type": "integer",
                      "width": "300px"
                    },
                    {
                      "filterProperty": "Category.CategoryName",
                      "footerTemplate": "",
                      "sortProperty": "Category.CategoryName",
                      "template": [
                        {
                          "icon": "folder",
                          "name": "link1",
                          "parameters": [
                            {
                              "name": "CategoryID",
                              "value": "${data.CategoryID}"
                            }
                          ],
                          "path": "categories-by-category-id",
                          "text": "${data.Category.CategoryName}",
                          "type": "link"
                        }
                      ],
                      "title": "Category",
                      "type": "string",
                      "width": "200px"
                    },
                    {
                      "footerTemplate": "",
                      "format": "double",
                      "property": "UnitPrice",
                      "template": "{{ data.UnitPrice | currency}}",
                      "title": "Unit Price",
                      "type": "number",
                      "width": "100px"
                    },
                    {
                      "footerTemplate": "",
                      "format": "int32",
                      "property": "UnitsInStock",
                      "template": "",
                      "title": "Units In Stock",
                      "type": "integer",
                      "width": "120px"
                    },
                    {
                      "footerTemplate": "",
                      "format": "int32",
                      "property": "UnitsOnOrder",
                      "title": "Units On Order",
                      "type": "integer",
                      "width": "130px"
                    },
                    {
                      "footerTemplate": "",
                      "property": "Discontinued",
                      "template": "${data.Discontinued ? 'Yes' : 'No'}",
                      "title": "Discontinued",
                      "type": "boolean",
                      "width": "120px"
                    },
                    {
                      "filterable": false,
                      "format": "",
                      "sortable": true,
                      "template": [
                        {
                          "icon": "shopping_cart",
                          "name": "link2",
                          "parameters": [
                            {
                              "name": "ProductID",
                              "value": "${data.ProductID}"
                            }
                          ],
                          "path": "orders-by-product-id",
                          "text": "Orders",
                          "type": "link"
                        }
                      ],
                      "title": "Orders",
                      "type": "array",
                      "width": "140px"
                    }
                  ],
                  "count": "${getNorthwindProductsCount}",
                  "data": "${getNorthwindProductsResult}",
                  "emptyText": "No records to display.",
                  "events": {
                    "add": [
                      {
                        "path": "add-product",
                        "title": "Add Product",
                        "type": "popup"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete NorthwindProduct",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Northwind.deleteNorthwindProduct",
                        "parameters": [
                          {
                            "name": "ProductID",
                            "value": "${event.ProductID}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "NorthwindProduct deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "loadData": [
                      {
                        "name": "Northwind.getNorthwindProducts",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$expand",
                            "value": "Supplier,Category"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          },
                          {
                            "name": "$expand",
                            "value": "Supplier,Category"
                          }
                        ],
                        "then": [
                          {
                            "name": "getNorthwindProductsResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getNorthwindProductsCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "ProductID",
                            "value": "${event.ProductID}"
                          }
                        ],
                        "path": "edit-product",
                        "title": "Edit Product",
                        "type": "popup"
                      }
                    ]
                  },
                  "name": "grid0",
                  "template": "",
                  "title": "",
                  "type": "grid",
                  "value": "",
                  "confirmDeleteText": "Are you sure you want to delete this record?",
                  "confirmDeleteTitle": "Confirmation",
                  "confirmDeleteOkText": "Ok",
                  "confirmDeleteCancelText": "Cancel"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "Northwind.getNorthwindProducts",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          },
          {
            "name": "$expand",
            "value": "Supplier,Category"
          }
        ],
        "then": [
          {
            "name": "getNorthwindProductsResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getNorthwindProductsCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Products"
}