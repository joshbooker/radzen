{
  "access": [
    "Everybody"
  ],
  "components": [
    {
      "components": [
        {
          "components": [
            {
              "class": "justify-content-center col-md-12",
              "components": [
                {
                  "name": "image0",
                  "path": "/assets/images/radzen-logo.svg",
                  "style": {
                    "marginBottom": "1rem",
                    "width": "70%"
                  },
                  "type": "image"
                },
                {
                  "name": "heading0",
                  "size": "H3",
                  "style": {
                    "color": "#ff6d41"
                  },
                  "text": "Radzen Showcase Application Log In",
                  "type": "heading"
                },
                {
                  "content": "<i>(username: admin@example.com password: @Admin123)</i>",
                  "name": "html0",
                  "type": "html"
                }
              ],
              "name": "col0",
              "style": {
                "marginBottom": "1rem",
                "marginLeft": "0px",
                "textAlign": "center"
              },
              "type": "col"
            }
          ],
          "name": "row0",
          "type": "row"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "allowRegister": false,
                  "allowResetPassword": false,
                  "events": {
                    "login": [
                      {
                        "error": [
                          {
                            "detail": "${result.error.message}",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Security.login",
                        "parameters": [
                          {
                            "name": "username",
                            "value": "${event.username.trim()}"
                          },
                          {
                            "name": "password",
                            "value": "${event.password.trim()}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "register": [
                      {
                        "path": "register-application-user",
                        "type": "popup"
                      }
                    ]
                  },
                  "loginText": "Login",
                  "name": "login0",
                  "passwordRequired": "Password is required",
                  "passwordText": "Password",
                  "registerMessageText": "Don't have an account yet?",
                  "registerText": "Sign up",
                  "style": {
                    "paddingLeft": "16px",
                    "paddingRight": "16px"
                  },
                  "type": "login",
                  "userRequired": "Username is required",
                  "userText": "Username",
                  "resetPasswordText": "Forgot password"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": []
  },
  "layout": "Login",
  "name": "Login"
}