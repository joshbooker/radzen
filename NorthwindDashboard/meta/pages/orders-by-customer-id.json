{
  "access": [
    "Everybody"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "style": {
            "marginLeft": "10px"
          },
          "text": "Orders by Customer: ${order.Customer.CompanyName}",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "addText": "Add",
                  "allowAdd": false,
                  "allowDelete": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "columnWidth": "150px",
                  "columns": [
                    {
                      "filterProperty": "Employee.FirstName",
                      "format": "int32",
                      "property": "EmployeeID",
                      "sortProperty": "Employee.FirstName",
                      "template": [
                        {
                          "icon": "face",
                          "name": "link0",
                          "parameters": [
                            {
                              "name": "EmployeeID",
                              "value": "${data.EmployeeID}"
                            }
                          ],
                          "path": "employees-by-employee-id",
                          "text": "${data.Employee.FirstName} ${data.Employee.LastName}",
                          "type": "link"
                        }
                      ],
                      "title": "Employee",
                      "type": "integer",
                      "width": "160px"
                    },
                    {
                      "format": "date-time",
                      "property": "OrderDate",
                      "template": "${data.OrderDate | utcDate}",
                      "title": "Order Date",
                      "type": "string"
                    },
                    {
                      "format": "date-time",
                      "property": "RequiredDate",
                      "template": "${data.RequiredDate | utcDate}",
                      "title": "Required Date",
                      "type": "string"
                    },
                    {
                      "format": "date-time",
                      "property": "ShippedDate",
                      "template": "${data.ShippedDate | utcDate}",
                      "title": "Shipped Date",
                      "type": "string"
                    },
                    {
                      "format": "double",
                      "property": "Freight",
                      "title": "Freight",
                      "type": "number"
                    },
                    {
                      "property": "ShipName",
                      "title": "Ship Name",
                      "type": "string"
                    },
                    {
                      "property": "ShipAddress",
                      "title": "Ship Address",
                      "type": "string"
                    },
                    {
                      "property": "ShipCity",
                      "title": "Ship City",
                      "type": "string"
                    },
                    {
                      "property": "ShipRegion",
                      "title": "Ship Region",
                      "type": "string"
                    },
                    {
                      "filterProperty": "",
                      "property": "ShipPostalCode",
                      "title": "Ship Postal Code",
                      "type": "string"
                    },
                    {
                      "property": "ShipCountry",
                      "title": "Ship Country",
                      "type": "string"
                    },
                    {
                      "filterProperty": "",
                      "filterable": false,
                      "sortable": false,
                      "template": [
                        {
                          "icon": "details",
                          "name": "link1",
                          "parameters": [
                            {
                              "name": "OrderID",
                              "value": "${data.OrderID}"
                            }
                          ],
                          "path": "order-details-by-order-id",
                          "text": "Details",
                          "type": "link"
                        }
                      ],
                      "title": "Details",
                      "width": "140px"
                    }
                  ],
                  "count": "${getNorthwindOrdersCount}",
                  "data": "${getNorthwindOrdersResult}",
                  "emptyText": "No records to display.",
                  "events": {
                    "add": [
                      {
                        "path": "add-order",
                        "title": "Add Order",
                        "type": "popup"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete NorthwindOrder",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Northwind.deleteNorthwindOrder",
                        "parameters": [
                          {
                            "name": "OrderID",
                            "value": "${event.OrderID}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "NorthwindOrder deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "loadData": [
                      {
                        "name": "Northwind.getNorthwindOrders",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$expand",
                            "value": "Customer,Employee"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter ? event.filter + ' and ':''}CustomerID eq '${parameters.CustomerID}'"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          },
                          {
                            "name": "$expand",
                            "value": "Customer,Employee"
                          }
                        ],
                        "then": [
                          {
                            "name": "getNorthwindOrdersResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getNorthwindOrdersCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "OrderID",
                            "value": "${event.OrderID}"
                          }
                        ],
                        "path": "edit-order",
                        "title": "Edit Order",
                        "type": "popup"
                      }
                    ]
                  },
                  "name": "grid0",
                  "title": "",
                  "type": "grid",
                  "confirmDeleteText": "Are you sure you want to delete this record?",
                  "confirmDeleteTitle": "Confirmation",
                  "confirmDeleteOkText": "Ok",
                  "confirmDeleteCancelText": "Cancel"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "Northwind.getNorthwindOrders",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          },
          {
            "name": "$expand",
            "value": "Customer,Employee"
          },
          {
            "name": "$filter",
            "value": "CustomerID eq '${parameters.CustomerID}'"
          }
        ],
        "then": [
          {
            "name": "getNorthwindOrdersResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getNorthwindOrdersCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          },
          {
            "condition": "",
            "name": "order",
            "type": "set",
            "value": "${result.value[0]}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Orders by CustomerID"
}