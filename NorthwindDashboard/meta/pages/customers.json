{
  "access": [
    "Everybody"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Customers",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "addText": "Add",
                  "allowAdd": true,
                  "allowDelete": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "columnWidth": "150px",
                  "columns": [
                    {
                      "format": "",
                      "property": "CompanyName",
                      "title": "Company Name",
                      "type": "string",
                      "width": "200px"
                    },
                    {
                      "property": "ContactName",
                      "title": "Contact Name",
                      "type": "string"
                    },
                    {
                      "property": "ContactTitle",
                      "title": "Contact Title",
                      "type": "string"
                    },
                    {
                      "property": "Address",
                      "title": "Address",
                      "type": "string"
                    },
                    {
                      "property": "Country",
                      "template": [
                        {
                          "name": "image0",
                          "path": "/assets/images/${data.Country.toLowerCase()}.png",
                          "style": {
                            "height": "20px",
                            "width": "40px"
                          },
                          "type": "image"
                        },
                        {
                          "name": "label0",
                          "text": "${data.Country}",
                          "type": "label"
                        }
                      ],
                      "title": "Country",
                      "type": "string"
                    },
                    {
                      "property": "City",
                      "title": "City",
                      "type": "string"
                    },
                    {
                      "property": "PostalCode",
                      "title": "Postal Code",
                      "type": "string"
                    },
                    {
                      "property": "Phone",
                      "title": "Phone",
                      "type": "string"
                    },
                    {
                      "property": "Fax",
                      "title": "Fax",
                      "type": "string"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "template": [
                        {
                          "icon": "shopping_cart",
                          "name": "link0",
                          "parameters": [
                            {
                              "name": "CustomerID",
                              "value": "${data.CustomerID}"
                            }
                          ],
                          "path": "orders-by-customer-id",
                          "text": "Orders",
                          "type": "link"
                        }
                      ],
                      "title": "Orders",
                      "width": "140px"
                    }
                  ],
                  "count": "${getCustomersCount}",
                  "data": "${getCustomersResult}",
                  "emptyText": "No records to display.",
                  "events": {
                    "add": [
                      {
                        "path": "add-customer",
                        "type": "popup"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete Customer",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Northwind.deleteCustomer",
                        "parameters": [
                          {
                            "name": "CustomerID",
                            "value": "${event.CustomerID}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "Customer deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "loadData": [
                      {
                        "name": "Northwind.getCustomers",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$expand",
                            "value": ""
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          }
                        ],
                        "then": [
                          {
                            "name": "getCustomersResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getCustomersCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "CustomerID",
                            "value": "${event.CustomerID}"
                          }
                        ],
                        "path": "edit-customer",
                        "type": "popup"
                      }
                    ]
                  },
                  "name": "grid0",
                  "title": "",
                  "type": "grid",
                  "confirmDeleteText": "Are you sure you want to delete this record?",
                  "confirmDeleteTitle": "Confirmation",
                  "confirmDeleteOkText": "Ok",
                  "confirmDeleteCancelText": "Cancel"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "Northwind.getCustomers",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          }
        ],
        "then": [
          {
            "name": "getCustomersResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getCustomersCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Customers"
}