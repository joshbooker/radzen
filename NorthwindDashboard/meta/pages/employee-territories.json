{
  "access": [
    "Everybody"
  ],
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Employee Territories"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "name": "grid0",
                  "allowDelete": true,
                  "allowAdd": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "count": "${getEmployeeTerritoriesCount}",
                  "data": "${getEmployeeTerritoriesResult}",
                  "events": {
                    "loadData": [
                      {
                        "name": "Northwind.getEmployeeTerritories",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$expand",
                            "value": "Employee,Territory"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          },
                          {
                            "name": "$expand",
                            "value": "Employee,Territory"
                          }
                        ],
                        "then": [
                          {
                            "name": "getEmployeeTerritoriesResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getEmployeeTerritoriesCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete EmployeeTerritory",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Northwind.deleteEmployeeTerritory",
                        "parameters": [
                          {
                            "name": "EmployeeID",
                            "value": "${event.EmployeeID}"
                          },
                          {
                            "name": "TerritoryID",
                            "value": "${event.TerritoryID}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "EmployeeTerritory deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "add": [
                      {
                        "path": "add-employee-territory",
                        "type": "popup"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "EmployeeID",
                            "value": "${event.EmployeeID}"
                          },
                          {
                            "name": "TerritoryID",
                            "value": "${event.TerritoryID}"
                          }
                        ],
                        "path": "edit-employee-territory",
                        "type": "popup"
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "format": "int32",
                      "property": "EmployeeID",
                      "sortProperty": "Employee.LastName",
                      "filterProperty": "Employee.LastName",
                      "template": "${data.Employee?.LastName}",
                      "title": "Employee",
                      "type": "integer"
                    },
                    {
                      "property": "TerritoryID",
                      "sortProperty": "Territory.TerritoryID",
                      "filterProperty": "Territory.TerritoryID",
                      "template": "${data.Territory?.TerritoryID}",
                      "title": "Territory",
                      "type": "string"
                    }
                  ],
                  "type": "grid",
                  "emptyText": "No records to display.",
                  "addText": "Add",
                  "confirmDeleteText": "Are you sure you want to delete this record?",
                  "confirmDeleteTitle": "Confirmation",
                  "confirmDeleteOkText": "Ok",
                  "confirmDeleteCancelText": "Cancel"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "Northwind.getEmployeeTerritories",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          },
          {
            "name": "$expand",
            "value": "Employee,Territory"
          }
        ],
        "then": [
          {
            "name": "getEmployeeTerritoriesResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getEmployeeTerritoriesCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Employee Territories",
  "layout": "Main"
}