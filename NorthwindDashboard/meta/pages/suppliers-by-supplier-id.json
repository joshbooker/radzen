{
  "access": [
    "Everybody"
  ],
  "components": [
    {
      "components": [
        {
          "icon": "arrow_back",
          "name": "link0",
          "path": "products",
          "style": {
            "float": "right",
            "lineHeight": "54px"
          },
          "text": "Back to Products",
          "type": "link"
        },
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Supplier: ${supplier.CompanyName}",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "addText": "Add",
                  "allowAdd": false,
                  "allowDelete": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "columnWidth": "100px",
                  "columns": [
                    {
                      "property": "CompanyName",
                      "title": "Company Name",
                      "type": "string",
                      "width": "150px"
                    },
                    {
                      "property": "ContactName",
                      "title": "Contact Name",
                      "type": "string",
                      "width": "200px"
                    },
                    {
                      "property": "ContactTitle",
                      "title": "Contact Title",
                      "type": "string",
                      "width": "200px"
                    },
                    {
                      "property": "Address",
                      "title": "Address",
                      "type": "string",
                      "width": "200px"
                    },
                    {
                      "property": "City",
                      "title": "City",
                      "type": "string",
                      "width": "200px"
                    },
                    {
                      "property": "PostalCode",
                      "title": "Postal Code",
                      "type": "string"
                    },
                    {
                      "property": "Country",
                      "title": "Country",
                      "type": "string"
                    },
                    {
                      "property": "Phone",
                      "title": "Phone",
                      "type": "string"
                    }
                  ],
                  "count": "${getSuppliersCount}",
                  "data": "${getSuppliersResult}",
                  "emptyText": "No records to display.",
                  "events": {
                    "add": [
                      {
                        "path": "add-supplier",
                        "type": "popup"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete Supplier",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Northwind.deleteSupplier",
                        "parameters": [
                          {
                            "name": "SupplierID",
                            "value": "${event.SupplierID}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "Supplier deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "loadData": [
                      {
                        "name": "Northwind.getSuppliers",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$expand",
                            "value": ""
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter ? event.filter + ' and ':''}SupplierID eq ${parameters.SupplierID}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          }
                        ],
                        "then": [
                          {
                            "name": "getSuppliersResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getSuppliersCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "SupplierID",
                            "value": "${event.SupplierID}"
                          }
                        ],
                        "path": "edit-supplier",
                        "type": "popup"
                      }
                    ]
                  },
                  "name": "grid0",
                  "title": "",
                  "type": "grid",
                  "confirmDeleteText": "Are you sure you want to delete this record?",
                  "confirmDeleteTitle": "Confirmation",
                  "confirmDeleteOkText": "Ok",
                  "confirmDeleteCancelText": "Cancel"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "Northwind.getSuppliers",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          },
          {
            "name": "$filter",
            "value": "SupplierID eq ${parameters.SupplierID}"
          }
        ],
        "then": [
          {
            "name": "getSuppliersResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getSuppliersCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          },
          {
            "condition": "",
            "name": "supplier",
            "type": "set",
            "value": "${result.value[0]}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Suppliers by SupplierID"
}